{
  "name": "@turbostarter/db",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./src/server.ts"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./src/schema/index.ts"
    },
    "./env": {
      "types": "./dist/env/index.d.ts",
      "default": "./src/env/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down",
    "db:setup": "pnpm run db:start && pnpm run db:migrate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate && eslint --fix && prettier --write . --ignore-path ../../.gitignore",
    "db:check": "drizzle-kit check",
    "db:studio": "drizzle-kit studio",
    "db:status": "docker compose logs -f",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@turbostarter/eslint-config": "workspace:*",
    "@turbostarter/prettier-config": "workspace:*",
    "@turbostarter/tsconfig": "workspace:*",
    "drizzle-kit": "0.30.1",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@turbostarter/prettier-config",
  "dependencies": {
    "@t3-oss/env-core": "0.11.1",
    "drizzle-orm": "0.38.3",
    "drizzle-zod": "0.5.1",
    "postgres": "3.4.4",
    "zod": "catalog:"
  }
}
