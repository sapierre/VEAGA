{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:chrome": {
      "dependsOn": ["^build"],
      "outputs": ["build/chrome-mv3-prod.zip", "build/chrome-mv3-prod/**"],
      "env": ["PLASMO_PUBLIC_*"]
    },
    "build:firefox": {
      "dependsOn": ["^build"],
      "outputs": ["build/firefox-mv3-prod.zip", "build/firefox-mv3-prod/**"],
      "env": ["PLASMO_PUBLIC_*"]
    },
    "build": {
      "dependsOn": ["build:chrome", "build:firefox"]
    },
    "dev": {
      "persistent": true
    }
  }
}
