{
  "name": "extension",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:chrome": "dotenv -c -- wxt zip",
    "build:firefox": "dotenv -c -- wxt zip -b firefox",
    "clean": "git clean -xdf build .cache .wxt .turbo node_modules",
    "dev": "dotenv -c -- pnpm dev:chrome",
    "dev:chrome": "wxt",
    "dev:firefox": "wxt -b firefox",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "postinstall": "wxt prepare",
    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@turbostarter/prettier-config",
  "dependencies": {
    "@tanstack/react-query": "catalog:",
    "@turbostarter/analytics-extension": "workspace:*",
    "@turbostarter/api": "workspace:*",
    "@turbostarter/auth": "workspace:*",
    "@turbostarter/i18n": "workspace:*",
    "@turbostarter/shared": "workspace:*",
    "@turbostarter/ui": "workspace:*",
    "@turbostarter/ui-web": "workspace:*",
    "@webext-core/messaging": "2.1.0",
    "envin": "catalog:",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "vite-plugin-svgr": "4.3.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@turbostarter/eslint-config": "workspace:*",
    "@turbostarter/prettier-config": "workspace:*",
    "@turbostarter/tailwind-config": "workspace:*",
    "@turbostarter/tsconfig": "workspace:*",
    "@types/chrome": "0.0.270",
    "@types/node": "catalog:node22",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@wxt-dev/auto-icons": "1.0.2",
    "@wxt-dev/module-react": "1.1.3",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "wxt": "0.20.7"
  }
}
